<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
<div>
    <h3>
        Hallo <%= username %> selamat datang kembali mau pesan apa ni
    </h3>
    <div>
        <table border="2">
            <tr>
                <th>Nama Makanan</th>
                <th>Deskripsi</th>
                <th>Harga</th>
                <th>Gambar</th>
                <th>Pesan</th>
            </tr>
            <% foods.map(el => { %>
                <tr>
                    <td><%= el.name %></td>
                    <td><%= el.description %></td>
                    <td><%= el.price %></td>
                    <td><img src="<%= el.imageUrl %>" alt="image" height="100"></td>
                    <td><a href="user/foods/<%= el.id %>/add">Tambahkan Pesanan</a></td>
                </tr>
            <% }) %>
        </table>
    </div>
</div>
</body>
</html>